Import("env")

env.Append(
    CPPPATH=[
        "#/lib/mbedtls",
        "#/lib/mbedtls/include",
    ],
)


libenv = env.Clone(FW_LIB_NAME="mbedtls")
libenv.ApplyLibFlags()

sources = ["mbedtls/library/des.c", "mbedtls/library/platform_util.c"]

lib = libenv.StaticLibrary("${FW_LIB_NAME}", sources)
libenv.Install("${LIB_DIST_DIR}", lib)
Return("lib")
